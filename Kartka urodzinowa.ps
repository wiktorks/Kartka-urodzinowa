/oko
{
	2 dict begin
	
		/Y exch def
		/X exch def
		
		0 1 1 setrgbcolor
		X Y 30 0 360 arc
		fill
		
		0 0 0 setrgbcolor
		X Y 10 0 360 arc
		fill
		
		stroke
	
	end
} def

/usmiech
{
	gsave
	2 dict begin
	
		/X exch def
		/Y exch def
		
		5 setlinewidth
		X Y moveto
		currentpoint translate
		0 0 150 0 360 arc
		gsave
		
		stroke
		
		grestore
		1 1 0 setrgbcolor
		fill
		
		58 78 oko
		58 -78 oko
		
		1 0 0 setrgbcolor
		10 setlinewidth
		1 setlinecap
		-20 0 50 120 240 arc
		
		stroke
	
	end
	grestore
} def

/trojkat
{
	1 dict begin
		
		/size exch def
		
		0 size neg moveto
		size 30 cos mul size 30 sin mul lineto
		size 150 cos mul size 150 sin mul lineto
		
		closepath
		fill
		
	end
} def

/gwiazdka
{
	gsave
	4 dict begin
		
		/color exch def
		/size exch def
		/Y exch def
		/X exch def
		
		color 0 eq {1 1 0 setrgbcolor} if
		color 1 eq {1 0 0 setrgbcolor} if
		color 2 eq {0 1 0 setrgbcolor} if
		color 3 eq {0 0 1 setrgbcolor} if
		
		X Y moveto
		currentpoint translate
		4{
			size trojkat
			stroke
			30 rotate
		} repeat
	
	end
	grestore
} def

/linie
{
	/i 1 def
	30
	{
		i 3 mod 0 eq {1 0 0 setrgbcolor} if
		i 3 mod 1 eq {0 1 0 setrgbcolor} if
		i 3 mod 2 eq {0 0 1 setrgbcolor} if
		0 i 5 mul moveto
		600 0 rlineto
		stroke
		/i i 1 add def
	} repeat
	
} def

/napis
{
	gsave
	2 dict begin
		
		/Y exch def
		/X exch def
		
		/Times-BoldItalic findfont 
		
		X Y moveto
		currentpoint translate
		-90 rotate
		75 scalefont setfont
		
		gsave
		-1 1 scale
		(Wszystkiego) true charpath clip
		stroke
		linie
		
		grestore
		(Najlepszego) true charpath clip
		stroke
		linie
		
	end
	grestore
} def

